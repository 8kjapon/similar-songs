<%= search_form_for @q, url: song_pairs_path, method: :get, class: "mb-3 search-form", data: { controller: "search-autocomplete", search_autocomplete_url_value: autocomplete_song_pairs_path } do |f| %>
  <div class="d-flex input-group">
    <%= f.search_field :original_song_title_or_similar_song_title_or_original_song_artist_list_or_similar_song_artist_list_cont, placeholder: "曲名やアーティスト名から検索", class: "form-control", data: { search_autocomplete_target: "input" } %>
    <%= f.hidden_field :original_song_title_or_similar_song_title_or_original_song_artist_list_or_similar_song_artist_list, data: { search_autocomplete_target: "hidden" } %>
    <%= f.submit "検索", class: "btn btn-primary" %>
  </div>
  <ul data-search-autocomplete-target="results" class="list-group"></ul>
<% end %>