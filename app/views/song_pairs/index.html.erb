<% set_meta_tags(title: t("views.song_pairs.index.title")) %>
<% set_meta_tags(og: { title: t("views.song_pairs.index.title") }) %>
<div>
  <h1 class="text-center mb-4"><%= t("views.song_pairs.index.title") %></h1>
  <div class="d-flex justify-content-center mb-4">
    <% if logged_in? %>
      <%= render "shared/sort_with_filter", categories: @categories %>
    <% else %>
      <div class="text-center">
        <p><%= t("views.song_pairs.index.sort.label") %>:</p>
        <p><%= link_to t("views.song_pairs.index.sort.signup_to_use"), login_path %></p>
      </div>
    <% end %>
  </div>
  <div class="mb-4">
    <% if @song_pairs.present? %>
      <%= render "shared/song_pair_block", song_pairs: @song_pairs %>
      <%= paginate @song_pairs %>
    <% else %>
      <div class="text-center mb-3">
        <p><%= t("views.not_found.song_pairs") %></p>
      </div>
      <% if logged_in? %>
        <div class="normal-button d-flex justify-content-center">
          <%= link_to t("views.song_pairs.index.submit"), new_song_pair_path, class: "btn" %>
        </div>
      <% else %>
        <div class="normal-button d-flex justify-content-center">
          <%= link_to t("views.song_pairs.index.signup_to_submit"), login_path, class: "btn" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>