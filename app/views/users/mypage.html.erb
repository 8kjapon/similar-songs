<% set_meta_tags(title: t("views.users.mypage.title"), og: { title: t("views.users.mypage.title") }) %>
<h1 class="text-center mb-4"><%= t("views.users.mypage.title") %></h1>
<div class="mb-5 user-info d-flex align-items-center">
  <div>
    <p><%= t("views.users.mypage.user.name") %>: <%= @user.name %></p>
    <p><%= t("views.users.mypage.user.created_at") %>: <%= @user.created_at.strftime('%Y年%m月%d日') %></p>
    <p><%= t("views.users.mypage.user.song_pairs") %>: <%= @song_pairs.count %></p>
  </div>
  <div class="ms-auto">
    <%= link_to t("views.users.mypage.user.edit"), edit_mypage_path %>
  </div>
</div>
<div>
  <h2 class="text-center mb-4"><%= t("views.users.submit_songs.title") %></h2>
  <div class="mb-4">
    <% if @song_pairs.present? %>
      <%= render "shared/song_pair_block", song_pairs: @song_pairs, maximum: 5 %>
      <% if @song_pairs.count > 5 %>
        <div class="more-button d-flex justify-content-center">
          <%= link_to t("views.buttons.show_more"), submit_songs_path, class: "btn" %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center">
        <p><%= t("views.not_found.submit_songs") %></p>
      </div>
    <% end %>
  </div>
</div>
<div>
  <h2 class="text-center mb-4"><%= t("views.users.evaluated_songs.title") %></h2>
  <div class="mb-4">
    <% if @evaluated_song_pairs.present? %>
      <%= render "shared/song_pair_block", song_pairs: @evaluated_song_pairs, maximum: 5 %>
      <% if @evaluated_song_pairs.count > 5 %>
        <div class="more-button d-flex justify-content-center">
          <%= link_to t("views.buttons.show_more"), evaluated_songs_path, class: "btn" %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center">
        <p><%= t("views.not_found.submit_songs") %></p>
      </div>
    <% end %>
  </div>
</div>